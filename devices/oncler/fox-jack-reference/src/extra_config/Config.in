menu "Fox-Jack rootfs extra configuration"

menu "System init services"

config FJXX_INITSRV_TELNET
    bool "telnet"
    default n

if FJXX_INITSRV_TELNET
choice
    prompt "telnet enable mode"
    default FJXX_INITSRV_TELNET_MANUAL

config FJXX_INITSRV_TELNET_ENABLE
    bool "set the telnet init daemon to enable"
config FJXX_INITSRV_TELNET_MANUAL
    bool "set the telnet init daemon to manual startup"
endchoice
endif


menuconfig FJXX_INITSRV_SSH
    bool "ssh"
    default y

if FJXX_INITSRV_SSH
choice
    prompt "sshd enable mode"
    default FJXX_INITSRV_SSH_MANUAL

config FJXX_INITSRV_SSH_ENABLE
    bool "set the ssh init daemon to enable"
config FJXX_INITSRV_SSH_MANUAL
    bool "set the ssh init daemon to manual startup"
endchoice

config FJXX_SSH_LISTEN_PORT
    string "Your SSH Listen port"
    default "22"

config FJXX_SSH_AUTHKEY_LOGIN_PBK
    string "Your SSH public key"
    default ""

config FJXX_SSH_DIS_PASSWD_LOGIN
    bool "Disable password login"
    default n
    help
      If enabled, only public key login will be allowed.

comment "WARNING: Set SSH public key when password login is disabled!"
    depends on FJXX_SSH_DIS_PASSWD_LOGIN

endif

